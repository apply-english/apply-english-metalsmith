extends layout.jade

block title
    title= title
block content
    article
        header
            h2= "#" + number + " - " + title
        .you-tube-container
            iframe(src=youTubeUrl, controls="2",frameborder="0", allowfullscreen)
        != contents
    hr
    .pagination
        if next
            a.previous(href=next.path) &lArr;
        if previous && next
            | &#32;
        if previous
            a.next(href=previous.path) &rArr;
        .clear
    hr
    if NODE_ENV === 'production'
        #disqus_thread
            script.
                var disqus_config = function () {
                    this.page.identifier = '#{release.id}';
                };
                (function () {
                    var d = document, s = d.createElement('script');
                    s.src = '//apply-english.disqus.com/embed.js';
                    s.setAttribute('data-timestamp', +new Date());
                    (d.head || d.body).appendChild(s);
                })();